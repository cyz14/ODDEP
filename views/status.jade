extends layout

block addscript
  script(src="/javascripts/status-pager.js")

block content
  div.container-fluid
    div.well
      form#car.form-inline(name="car", method="get", action="")
        div.form-group.hidden
          input#cIndex(name="index", type='text')
        div.form-group
          label(for="userfilter") 用户名：
          input#userfilter.form-control(type="text", name="user", placeholder="非昵称")
        button.btn.btn-primary.pull-right(type="submit") 过滤
    div.panel.panel-default
      div.panel-heading= title
      div.panel-body
        table.table
          caption 需要手动刷新
          thead
            tr
              th ID
              th 用户名
              th 状态
              th 提交时间
          tbody
            - each line in list
              tr 
                th: span.label.label-default #{line.id}
                th: span.label.label-primary #{line.user}
                case (line.code)
                  when 0 
                    th: span.label.label-success #{line.status}
                  when 1 
                    th: span.label.label-warning #{line.status}
                  when 2 
                    th: span.label.label-default #{line.status}
                  when 100 
                    th: span.label.label-danger #{line.status}
                th: span.label.label-info #{line.time}

    //- 分页
    nav(style="text-align:center")
      ul.pagination
        - if (pager.left)
          li: a(href="#backward") &laquo;
          li: a(href="#left") &lt;
        - else
          li.disabled: a(href="#") &lt;
        - each page in pager.nums
          - var num = "#" + page
          - if (page!==pager.now)
            li: a(href="#{num}")= page
          - else
            li.active: a#index(href="#{num}")= page
        - if (pager.right)
          li: a(href="#right") &gt;
          li: a(href="#forward") &raquo;
        - else
          li.disabled: a(href="#") &gt;