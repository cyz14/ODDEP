extends layout

block addscript
  script(src="javascripts/register-ajax.js")

block content
  div.container-fluid
    div#alertusername.alert.alert-danger 登录用户名已存在
    form.form-horizontal(role="form", method="post")
      div#usernameinput.form-group
        label.control-label.col-sm-2(for="username") 用户名
        div.col-sm-5
          input#username.form-control(name="username", type="text", placeholder="登陆用", autofocus, required)
      div.form-group
        label.control-label.col-sm-2(for="nickname") 昵称
        div.col-sm-5
          input#nickname.form-control(name="nickname", type="text", placeholde="最多？个字符", required)
      div.form-group
        label.control-label.col-sm-2(for="password") 昵称
        div.col-sm-5
          input#password.form-control(name="password", type="password", placeholde="最多？个字符", required)
      div.form-group
        div.col-sm-offset-5.col-sm-10
          button.btn.btn-default(type="submit") 注册