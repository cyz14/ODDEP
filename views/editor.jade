extends layout
head 
  block stylesheets
    link(rel="stylesheet", href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
    link(type="text/css" rel="stylesheet", href="/stylesheets/canvas.css")
    //- ToDo: Customize vhdl editor's UI with bootstrap to adapt to more device size
    link(type="text/css" rel="stylesheet", href="/stylesheets/vhdleditor.css")
  block scripts
    //- bower_components: draw2d
    script(src="/draw2d/dist/shifty.js")
    script(src="/draw2d/dist/patched_raphael.js")
    script(src="/jquery/jquery.min.js")
    script(src="/draw2d/dist/jquery-touch_punch.js")
    script(src="/draw2d/dist/jquery.autoresize.js")
    script(src="/draw2d/dist/jquery.contextmenu.js")
    script(src="/draw2d/dist/rgbcolor.js")
    script(src="/draw2d/dist/patched_canvg.js")
    script(src="/draw2d/dist/patched_Class.js")
    script(src="/draw2d/dist/json2.js")
    script(src="/draw2d/dist/pathfinding-browser.min.js")
    script(src="/draw2d/dist/draw2d_core.js")

block content
  link(rel="stylesheet", href="http://cdn.bootcss.com/bootstrap-fileinput/4.3.5/css/fileinput.min.css")
  div.container-fluid
    ul#editorTab.nav.nav-pills
      li
        a(href="#visual", data-toggle="tab") 可视化编辑&nbsp;
          span.glyphicon.glyphicon-forward
      li
        a(href="#vhdl", data-toggle="tab") VHDL编辑&nbsp;
          span.glyphicon.glyphicon-forward
    div#editorTabContent.tab-content
      div#visual.tab-pane
        div#container.container
          div.layout
            div#editor.editor
              div.workspace
                div.palette
                div#toolbar.toolbar
                  span.group
                    span#editDelete.ion-ios-close-empty.icon.disabled
                  span.group
                    span#editUndo.ion-ios-arrow-left.icon.disabled
                    span#editRedo.ion-ios-arrow-right.icon.disabled
                div#canvasWrapper.content
                  div#canvas.canvas(oncontextmenu="return false;")
                div#canvas_zoom.btn-group
                  button#canvas_zoom_in.btn.highlight(type="button") &#8210
                  button#canvas_zoom_normal.btn.highlight(type="button") 100%
                  button#canvas_zoom_out.btn.highlight(type="button") &#xFF0B
      div#vhdl.tab-pane
        div.row
          div.panel.panel-default.col-md-6(style="padding: 5px")
            div.panel-heading
              h3.panel-title VHDL代码
            div#vhdlACE.panel-body
          div.panel.panel-primary.col-md-6(style="padding: 5px")
            div.panel-heading 激励文件 - 上传文件优先
            div.panel-body
              form#bigbus.form-horizontal(role="form", enctype="multipart/form-data", method="post", action='/upload')
                div.form-group
                  label.control-label.col-sm-2 上传文件
                  div.col-sm-10
                    input#motUpl.file.form-control(type="file", data-show-upload="false", name="motivate")
              form.form-horizontal(role="form")
                div.form-group
                  label.control-label.col-sm-2 输入文本
                  div.col-sm-10
                    textarea#stimCode.form-control(rows="25")
        button#codeSubmit.btn.btn-warning.btn-lg.center-block 提交
        form#car.hidden(name="car", method="post", action="/submit")
          input#banana(name="code", type="text")
          input#kevin(name="stim", type="text")
          input#mike(name="token", type="text")
        div.container
          p
        div.container
          p

block addscript
  script(src="http://cdn.bootcss.com/ace/1.2.5/ace.js", type="text/javascript", charset="utf-8")
  script(src="http://cdn.bootcss.com/bootstrap-fileinput/4.3.5/js/fileinput.min.js")
  script(src="http://cdn.bootcss.com/bootstrap-fileinput/4.3.5/js/locales/zh.min.js")
  script(src="/javascripts/editor-ace-config.js")
  script(src="https://cdn.rawgit.com/konvajs/konva/1.1.0/konva.js")
  script(src="/javascripts/editor-tab.js")
  script(src="/javascripts/editor-draw.js")
  script(src="/javascripts/editor-toVHDL.js")
