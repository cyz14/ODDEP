  div#toolbar.toolbar
    span.group      
      span#fileUpload.fileinput-button
        span#fileInput.ion-ios-upload-outline.icon
        input#file_input(type="file")
      span#fileSaveAs.ion-ios-download-outline.icon

    span.group
      span#editDelete.ion-ios-close-empty.icon.disabled

    span.group
      span#editUndo.ion-ios-arrow-left.icon.disabled
      span#editRedo.ion-ios-arrow-right.icon.disabled

    span.group#colorToolbar.btn-toolbar(role="toolbar", arial-label="Color toolbar", style="display:inline-block;")
      div.btn-group(role="group")
        button(type="button") Red
        button(type="button") Blue

  div.content#draw2dCanvasWrapper
    div.canvas#draw2dCanvas(style="width:6000px; height:6000px;", oncontextmenu="return false;")
    div#canvas_zoom.btn-group
      button(type="button")#canvas_zoom_in.btn.highlight -
      button(type="button")#canvas_zoom_normal.btn.highlight 100%
      button(type="button")#canvas_zoom_out.btn.highlight +
    div#probe_window
    div#json
